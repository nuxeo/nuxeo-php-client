{
  "name": "nuxeo/nuxeo-php-client",
  "description": "PHP Client Library for the Nuxeo Automation API",
  "keywords": ["nuxeo", "automation", "client"],
  "homepage": "http://www.nuxeo.com",
  "license": "AL2",
  "authors": [
    {
      "name": "Pierre-Gildas MILLON",
      "email": "pgmillon@nuxeo.com"
    }
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "2.0-dev"
    }
  },
  "require": {
    "php": "~7.1",
    "guzzlehttp/guzzle": "6.3.*",
    "monolog/monolog": "1.12.*",
    "jms/serializer": "0.16.*",
    "zendframework/zend-http": "2.2.*",
    "paragonie/random_compat": "2.0.*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "symfony/http-foundation": "2.6.*",
    "sensiolabs/security-checker": "3.0.*"
  },
  "autoload": {
    "psr-4": { "Nuxeo\\": "src/Nuxeo" }
  },
  "autoload-dev" : {
    "psr-4": {
      "Nuxeo\\Client\\Tests\\" : "tests/Nuxeo/Client/Tests",
      "Nuxeo\\Client\\FTests\\" : "ftests/src/test/php/Nuxeo/Client/FTests"
    }
  }
}
