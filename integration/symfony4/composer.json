{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/framework-bundle": "4.4.*",

        "guzzlehttp/guzzle": "~6.0 <= 6.5.5 || ~7.0 <= 7.4.2",
        "monolog/monolog": "~1.3 <= 1.27.0 || ~2.0, <= 2.5.0",
        "zbateson/mail-mime-parser": "~1.3 <= 1.3.3 || ~2.2 <= 2.2.1",
        "jms/serializer": "~2.0, <2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.1, <7.6",
        "symfony/browser-kit": "^4.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Nuxeo\\": "../../src/Nuxeo",
            "Nuxeo\\Client\\Tests\\": "../../tests/Nuxeo/Client/Tests",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    }
}
